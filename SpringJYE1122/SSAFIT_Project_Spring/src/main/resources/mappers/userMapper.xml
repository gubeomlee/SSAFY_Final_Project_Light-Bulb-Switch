<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.dao.UserDao">
	
	<select id="sellectAllUsers" resultType="User">
		select * 
		from UserInfo; 
	</select>
	
	<insert id="singup" parameterType="User">
		insert into UserInfo 
		(userId, password, username, location, age, gender)
		values 
		(#{userId}, #{password}, #{username}, #{location}, #{age}, #{gender}); 
	</insert>
	
	<select id="searchById" resultType="user">
		select * 
		from UserInfo
		where userId = #{id}; 
	</select>
	
</mapper>